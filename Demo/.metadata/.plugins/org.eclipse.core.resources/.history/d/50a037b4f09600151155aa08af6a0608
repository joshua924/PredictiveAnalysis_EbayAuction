package edu.nyu.sz1288;

import weka.core.Instances;
import weka.filters.Filter;
import weka.filters.unsupervised.attribute.Discretize;
import weka.filters.unsupervised.attribute.Remove;

public class Filtering {
	public static void applyFilter(Instances data, String[] options) throws Exception {
		Remove remove = new Remove();
		remove.setOptions(options);
		remove.setInputFormat(data);
		data = Filter.useFilter(data, remove);
	}

	public static void discretize(Instances data) throws Exception {
		Discretize filter = new Discretize(String.valueOf(data.classIndex() + 1));
		filter.setBins(2);
		filter.setMakeBinary(true);
		filter.setInputFormat(data);
		Filter.useFilter(data, filter);
	}
}
