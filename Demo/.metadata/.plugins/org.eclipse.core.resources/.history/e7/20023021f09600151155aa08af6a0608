package edu.nyu.sz1288;

import weka.classifiers.functions.Logistic;
import weka.core.Instance;
import weka.core.Instances;

public class WekaRunner {
	public static void main(String args[]) {
		try {
			Logistic log = new Logistic();
			
			Instances instances = IOHandler.readData("data/SelectedFeatureData.csv");
			instances.setClassIndex(0);
			Instances newInstances = Filtering.discretize(instances, 1);
			System.out.println(newInstances.attribute(0));
			System.out.println(newInstances.attribute(1));
			System.out.println(newInstances.classAttribute());
			log.buildClassifier(newInstances);
			
			Instance first = newInstances.firstInstance();
			
//			Instance inst = new Instance(8);
//			for(int i=0; i<=8; i++) inst.insertAttributeAt(i);
//			
//			inst.setValue(0, 1.4787);
//			inst.setValue(1, 0.0537);
//			inst.setValue(2, 0.9259259259259259259);
//			inst.setValue(3, 18.4273);
//			inst.setValue(4, 583);
//			inst.setValue(5, 291);
//			inst.setValue(6, 54);
//			inst.setValue(7, 12.26);
			
			System.out.println(log.classifyInstance(first));
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
